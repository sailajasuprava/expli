{
  "manifest_version": 3,
  "name": "TaskFlow",
  "description": "A productivity-focused Chrome extension.",
  "version": "1.0.0",

  "action": {
    "default_title": "TaskFlow",
    "default_popup": "index.html",
    "default_icon": "icon.png"
  },

  "background": {
    "service_worker": "background.js",
    "type": "module"
  },

  "permissions": ["storage"]
}
